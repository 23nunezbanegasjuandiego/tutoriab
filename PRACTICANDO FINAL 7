/******************************************************************************

este problema se base en pedirle al usuario PRIMERO: cuantos elementos quiere que tenga su VECTOR
SEGUNDO que ingrese los elementos
TERCERO la salida sera la posion de cada elemento 

*******************************************************************************/
#include <iostream>
#include<conio.h>
using namespace std;


int main()
{
int numeros[100];
int n;
cout<<"INGRESE LA CANTIDAD DE ELEMENTOS DEL VECTOR: "<<endl;
cin>>n;
for(int i=0;i<n;i++){
    cout<<"Ingrese los elementos del vector: ";
    cin>>numeros[i];
    }
for(int i=0;i<n;i++){
    cout<<i<<"---> " <<numeros[i]<<endl;
}
    return 0;
}
