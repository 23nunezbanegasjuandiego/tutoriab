#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    int n, i;
    float x, s;
    cout << "Ingrese el valor de X: ";
    cin>>x;
    cout<<"Cuantos numeros desea repetir? : ";
    cin>>n;
    for(i=1;i<=n ; i++)
    {
        s =s+ pow(x,i);
    }
    cout<<"La suma es :" <<s;
return 0;
}
