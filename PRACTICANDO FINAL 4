#include <iostream>
#include<conio.h>
#include<math.h>
using namespace std;
int main()
{
int n,suma=0,elevacion;
cout<<"INGRESE LA CANTIDAD DE N PARA SUMAR: "<<endl;
cin>>n;
for(int i=1;i<=n;i++){
    elevacion=pow(2,i);
    suma=suma+elevacion;
}
cout<<"LA SUMA ES DE: "<<suma<<endl;

     
 
 
getch();
    return 0;
}
