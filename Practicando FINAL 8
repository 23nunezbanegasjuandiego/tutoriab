/******************************************************************************

este problema se trata de encontrar un el mayor de los numeros
dentro de un vector, estuvo interesante

*******************************************************************************/
#include <iostream>
#include<conio.h>
using namespace std;


int main()
{
int numeros[100];
int n,mayor=0;
cout<<"DIGITE LA CANTIDAD DE ELEMENTOS DEL VECTOR: "<<endl;
cin>>n;
for(int i =0;i<n;i++){
    cout<<i+1<<".INGRESE EL ELEMENTOS DEL VECTOR: "<<endl;
    cin>>numeros[i];
    if(numeros[i]>mayor){
        mayor=numeros[i];
    }
}
cout<<"El mayor numero del vector es: "<<mayor<<endl;
    return 0;
}
